<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FinancialTracker</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/Login.css" />
    <link rel="stylesheet" href="~/css/Register.css" />
    <link rel="stylesheet" href="~/css/Account.css" />
    <link rel="stylesheet" href="~/css/Budgets.css" />
    <link rel="stylesheet" href="~/css/Transaction.css" />
    <script src="~/js/budget.js"></script>
    <script src="~/js/transaction.js"></script>

</head>
<body>
    <nav class="navbar">
        <!-- Navbar left section -->
        <div class="nav-left">
            <a href="/">Financial Tracker</a>
        </div>

        <!-- Navbar right section -->
        <div class="nav-right">
            <ul>
                @if (Context.Session.GetInt32("userid") != null)
                {
                    <li>
                        <form method="post" action="/Logout">
                            @Html.AntiForgeryToken()
                            <button class="logout-btn" type="submit">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li>
                        <a href="/Login">Login</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <!-- Left aesthetic rectangle -->
    <div class="side-rectangle left-rectangle"></div>
    <!-- Right aesthetic rectangle -->
    <div class="side-rectangle right-rectangle"></div>

    <!-- Main content -->
    <div class="container">
        @RenderBody()
    </div>
</body>
</html>
